<mvc:View
	controllerName="hcm.capr.ZHCMApprove.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<Page
		id="page"
		navButtonPress="onNavBack"
		showNavButton="{device>/system/phone}"
		title="{i18n>detailTitle}"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">

		<content>
			<ObjectHeader
				id="objectHeader"
				title="{Claimno}"
				number="{
					path: 'Total',
					formatter: '.formatter.currencyValue'
				}"
				numberUnit="{Cyear}">
			</ObjectHeader>
			<Table
				id="lineItemsList"
				width="auto"
				items="{To_Items}"
				updateFinished="onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}"
				mode = "MultiSelect" itemPress="onShowAttach"
				class="sapUiResponsiveMargin">
				<headerToolbar>
					<Toolbar id="lineItemsToolbar">
						<Title
							id="lineItemsHeader"
							text="{detailView>/lineItemListTitle}"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{i18n>detailLineItemTableIDColumn}"/>
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
						hAlign="End">
						<Text text="{i18n>detailLineItemTableUnitNumberColumn}"/>
					</Column>
					<Column>
						<Text text="{i18n>detailLineItemTableButtonColumn}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation">
						<cells>
							<ObjectIdentifier
								title="{path: 'Wagetype',formatter: '.formatter.getClaimType'}"
								text="{path: 'Createdate', formatter: '.formatter.formatDate'} ({TimeStart} - {TimeEnd})"/>
							<ObjectNumber
								number="{
									path: 'ClaimAmount',
									formatter: '.formatter.currencyValue'
								}"
								unit="{Status}"/>
							<HBox>
							<Button text="Approve" type="Accept" press="onApprove"
									enabled="{path: 'Status', formatter: '.formatter.getStatusEnable'}"></Button>
							<Button class="sapUiSmallMarginBegin" text="Reject" type="Reject" press="onReject"
									enabled="{path: 'Status', formatter: '.formatter.getStatusEnable'}"></Button>
							</HBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text = "Approve" type="Accept" press = "onApprove"/>
		    	<Button text = "Reject" type="Reject" press = "onReject"/>
			</Toolbar>
		</footer>
	</Page>

</mvc:View>